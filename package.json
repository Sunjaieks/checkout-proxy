{
  "name": "checkout-proxy",
  "version": "1.0.0",
  "description": "HTTPS Proxy with dynamic certificate generation and host mapping",
  "main": "./out/main/main.js",
  "scripts": {
    "start": "electron-vite dev --sourcemap --remote-debugging-port=9222",
    "watch": "electron-vite dev --watch --sourcemap --remote-debugging-port=9222",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac"
  },
  "author": "sunjaieks",
  "license": "ISC",
  "dependencies": {
    "node-forge": "^1.3.1"
  },
  "devDependencies": {
    "electron": "35.1.2",
    "electron-builder": "^24.9.1",
    "electron-vite": "^3.1.0",
    "vite": "^6.3.5"
  },
  "build": {
    "appId": "sunjaieks.checkoutproxy",
    "productName": "CheckoutProxy",
    "files": [
      "out/**/*"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": [
          "!favicon.ico",
          "!icon.icns",
          "!fallback_ca.cnf",
          "!root_ca.cnf"
        ]
      },
      {
        "from": "README.md",
        "to": "README.md"
      }
    ],
    "directories": {
      "buildResources": "resources",
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/favicon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "icon": "resources/icon.icns",
      "category": "public.app-category.developer-tools",
      "identity": null
    },
    "nsis": {
      "oneClick": false,
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "allowToChangeInstallationDirectory": true
    }
  },
  "engines": {
    "node": "22.15.1",
    "npm": "10.9.2"
  }
}
